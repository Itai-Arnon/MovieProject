    </LinearLayout>

    <TextView
        android:id="@+id/overview"
        android:layout_below="@+id/first_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:text = "Blah Blah"
        android:textSize="12sp"
        />
</RelativeLayout>