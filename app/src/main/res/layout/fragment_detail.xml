<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapters.MovieRecyclerAdapter">


    <ImageView
        android:id="@+id/big_poster"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        tools:src="@drawable/baby_alien"
        android:contentDescription="Permanent Image"
        />


    <ImageView
        android:id="@+id/little_poster"
        android:layout_width="120dp"
        android:layout_height="80dp"
        tools:src="@drawable/baby_alien"
        android:layout_below="@+id/big_poster"
        android:contentDescription="Permanent Image"
        />

    <LinearLayout
        android:id="@+id/first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/big_poster"
        android:layout_toLeftOf="@+id/little_poster"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Baby Alien versus Baby Predator"
            android:textSize="22sp"
            />

